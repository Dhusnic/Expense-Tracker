{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "FastAPI Debug (.venv)",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "API.app.main:app",
        "--reload",
        "--host",
        "0.0.0.0",
        "--port",
        "8000"
      ],
      "python": "${workspaceFolder}/.venv/Scripts/python",
      "cwd": "${workspaceFolder}",
      "jinja": true
    }
  ]
}
